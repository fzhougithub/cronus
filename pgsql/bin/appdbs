#!/bin/bash

if [ $# -ne 4 ];then
	echo "Usage: $0 <dbIP> <dbname> <schema> <sqlfile>"
	exit 1
else
	dbIP=$1
	db=$2
	schema=$3
	sqlfile=$4
fi

echo "==== Connect to Host:$dbIP DB:ods_domani Schema:$schema, run SQLFile: $sqlfile ===="
echo ""

PGOPTIONS="--search_path=$schema" psql -h $dbIP -d $db  -f $sqlfile

