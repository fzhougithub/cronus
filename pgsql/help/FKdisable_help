SELECT DISTINCT
    format('ALTER TABLE %I.%I DISABLE TRIGGER ALL;', n.nspname, t.relname) AS disable_sql
FROM pg_constraint con
JOIN pg_class t ON t.oid = con.conrelid
JOIN pg_namespace n ON n.oid = t.relnamespace
WHERE con.contype = 'f'
  AND n.nspname NOT IN ('pg_catalog','information_schema')
ORDER BY disable_sql;

SELECT DISTINCT
    format('ALTER TABLE %I.%I ENABLE TRIGGER ALL;', n.nspname, t.relname) AS enable_sql
FROM pg_constraint con
JOIN pg_class t ON t.oid = con.conrelid
JOIN pg_namespace n ON n.oid = t.relnamespace
WHERE con.contype = 'f'
  AND n.nspname NOT IN ('pg_catalog','information_schema')
ORDER BY enable_sql;


