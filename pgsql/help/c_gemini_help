SELECT
    s.logicalrelid::regclass AS table_name,
    p.shardid,
    n.nodename
FROM pg_dist_placement p
JOIN pg_dist_shard s USING (shardid)
JOIN pg_dist_node n ON p.groupid = n.groupid
WHERE p.shardstate = 0;

