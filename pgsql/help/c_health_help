SELECT * FROM citus_check_cluster_node_health();

SELECT
    p.shardid,
    n.nodename,
    n.nodeport,
    p.shardstate
FROM pg_dist_placement p
JOIN pg_dist_node n
  ON p.groupid = n.groupid
ORDER BY p.shardid, n.nodename;


