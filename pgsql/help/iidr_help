#!/bin/bash
INSTANCE=iidr_admin
PG_HOST=localhost
PG_PORT=5432

# Check PostgreSQL is up
pg_isready -h $PG_HOST -p $PG_PORT || exit 1

# Check IIDR is running
/opt/ibm/cdc/bin/dmctl -I $INSTANCE status | grep -q "RUNNING"
if [ $? -ne 0 ]; then
  echo "IIDR not running â€” restarting..."
  /opt/ibm/cdc/bin/dmctl -I $INSTANCE restart
fi






