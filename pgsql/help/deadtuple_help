SELECT
  schemaname,
  relname,
  last_autovacuum,
  last_autoanalyze,
  n_dead_tup,
  n_live_tup,
  vacuum_count,
  autovacuum_count
FROM pg_stat_all_tables
WHERE schemaname = 'claimsprocess'
  AND relname LIKE 'claim_core_p1%'
ORDER BY n_dead_tup DESC;


-- Special Check

claimsprocess=# SELECT
  pid,
  backend_start,
  state,
  wait_event_type,
  wait_event,
  query_start,
  now() - query_start AS running_for,
  query
FROM pg_stat_activity
WHERE state = 'idle in transaction'
ORDER BY query_start ASC
LIMIT 10;
  pid  |        backend_start         |        state        | wait_event_type | wait_event |          query_start          |   running_for   |                                                                             query
